
<div class="sectionform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3 style="text-align:center">Cadastre-se Gratuitamente</h3>
    <%= devise_anser_error_messages! %>
    <div class="row">
      <div class="col-sm">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <div class="col-sm">
        <div class="form-group">
          <%= f.label :mobile %>
          <%= f.text_field :mobile, :autofocus => true, class: 'form-control masked_mobile' %>
        </div>
        <div class="form-group">
          <%= f.label :cpf %>
          <%= f.text_field :cpf, :autofocus => true, class: 'form-control masked_cpf' %>
        </div>
        <div class="form-group">
          <%= f.label :crm %>
          <%= f.text_field  :crm, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :speciality %>
          <%= f.text_field  :speciality, class: 'form-control' %>
        </div>
      </div>
    </div>
     <%= f.submit 'Continuar', :class => 'button' %>
  <% end %>
</div>
