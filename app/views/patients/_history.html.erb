          <%= form.text_field :enteropathies, class: 'form-control', title: 'Quais?' %>
        </div>
        <div class="form-group">
          <%= form.label :gastropathy %>
          <%= form.text_field :gastropathy, class: 'form-control', title: 'Quais?' %>
        </div>
        <div class="form-group">
          <%= form.label :nephropathy %>
          <%= form.text_field :nephropathy, class: 'form-control', title: 'Quais?' %>
        </div>
        <div class="form-group">
          <%= form.label :pneumopathy %>
