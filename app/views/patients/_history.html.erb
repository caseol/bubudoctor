<%= form_with(model: patient, remote: true) do |form| %>
  <div class="container col-sm-12">
    <% if patient.errors.any? %>
      <div id="error_explanation">
        <!--      <h2><%#= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>-->
        <ul>
          <% patient.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-4">
<!--        <fieldset>-->
<!--          <legend>História da doença</legend>-->
          <div class="form-group">
            <%= form.label :main_complaint %>
            <%= form.text_area :main_complaint, size: "25x10", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= form.label :history_of_disease %>
            <%= form.text_area :history_of_disease, size: "25x10", class: 'form-control' %>
          </div>
<!--        </fieldset>-->
      </div>
      <div class="col-sm-2">
        <div class="form-group">
          <%= form.label :suffered_accidents %>
          <%= form.text_field :suffered_accidents, class: 'form-control', title: "Quais?" %>
        </div>
        <div class="form-group">
          <%= form.label :have_allergy %>
          <%= form.text_field :have_allergy, class: 'form-control', title: 'Quais?' %>
        </div>
        <div class="form-group">
          <%= form.label :suffers_asthma %>
          <%= form.text_field :suffers_asthma, class: 'form-control', title: 'Explique' %>
        </div>
        <div class="form-group">
          <%= form.label :cardiopathies %>
          <%= form.text_field :cardiopathies, class: 'form-control', title: 'Quais?' %>
        </div>
        <div class="form-group">
          <%= form.label :previous_surgeries %>
