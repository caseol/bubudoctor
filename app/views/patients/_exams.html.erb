<%= form_with(model: patient, remote: true) do |form| %>
  <div class="container col-sm-12">
    <% if patient.errors.any? %>
      <div id="error_explanation">
        <!--      <h2><%#= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>-->
        <ul>
          <% patient.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-sm-6">
        <fieldset>
          <legend>Consultas</legend>
          <div id="div-consultations" class="col-12" data-url="<%= consultations_path(patient_id: patient.id) %>">

          </div>
        </fieldset>
      </div>
      <div class="col-sm-6">
        <fieldset>
          <legend>Exames</legend>
          <%#= link_to 'Atualizar Modal', exams_path,  {:remote => true, data:{toggle: "modal", target: '#modal-exames'}, class:"btn btn-primary"} %>
          <div id="div-exams" class="col-12" data-url="<%= exams_path(patient_id: patient.id) %>">

          </div>
        </fieldset>
      </div>
    </div>
  </div>
<% end %>