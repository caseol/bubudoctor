<div class="col-sm-6">
  <div class="form-group">
  <%= form_tag(new_and_associate_patient_path(format: :js), method: :post, remote: true) do %>
    <%= label_tag :code, "Doença/Problema" %>
    <%= hidden_field_tag :patient_id, @patient.id %>
    <%= hidden_field_tag :disease_id, "", class: "autocomplete-target" %>
    <%= text_field_tag :search_disease, "", data: { autocomplete: autocomplete_disease_code_diseases_path, hidden:{target: ".autocomplete-target"} }, class: 'form-control autocomplete-disease' %>
    <%= button_tag "Incluir Nova Doença", type: 'submit', class: 'btn btn-primary btn-new-disease', style:'display:none', data:{patient_id: @patient.id} %>
  <% end %>
  </div>
</div>

<table class="responsive nowrap table table-hover dttb" id="dttb-diseases" data-sort="true" data-source="<%= url_for(patient_id: @patient.id, format: :json)%>">
  <thead>
  <tr>
    <!-- <th data-data="patient">Paciente</th> -->
    <th data-data="code">Doença/Problema</th>
